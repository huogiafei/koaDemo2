.login-wrapper
  font-size: 14px
  position: relative

.login-bg
  top: 0
  left: 0
  position: absolute
  z-index: -1
  background: url("../img/login_bg.jpg") no-repeat center / cover
  width: 100vw
  height: 100vh
  &:after
    content:''
    position: absolute
    left: 0
    top: 0
    width: 100%
    height: 100%
    background: linear-gradient(to right, rgba(238, 238, 238, 1), 40%, rgba(238, 238, 238, 0))

.login-header
  padding: 40px 0
  display: flex
  align-items center
  justify-content center

.login-header-logo
  width: 60px
  margin-right: 20px

.login-header-title
  margin: 0
  color: #111
  font-size: 36px
  font-family:F_Julius
  font-weight: bold

.login-content
  position: absolute
  padding: 40px 20px
  left: 0
  top: 0
  width: 35vw
  height: 100vh
  z-index: 1
  background-color: rgba(255, 255, 255, .3)

.login-form
  width: 80%
  margin: 0 auto

.login-input .el-input__inner
  height: 50px
  line-height:@height

.login-btn
  width: 100%
  background-color: #333
  color: #fff
  height: 50px
  line-height:@height
  padding: 0
  &:hover
    background-color: #444 !important
    border-color:#444 !important
    color: #fff!important



